#include <iostream>
#include <iomanip> // Para std::setprecision

using namespace std;

int main() {
    double A, B, C, D, E, F;
    
    cout << "Ingrese los coeficientes A, B, C de la primera ecuación (Ax + By = C): ";
    cin >> A >> B >> C;
    
    cout << "Ingrese los coeficientes D, E, F de la segunda ecuación (Dx + Ey = F): ";
    cin >> D >> E >> F;
    
    double det = A * E - B * D;

    if (det != 0) {
        // Sistema compatible determinado (una única solución)
        double x = (C * E - B * F) / det;
        double y = (A * F - C * D) / det;

        cout << fixed << setprecision(4);
        cout << "Solución única:" << endl;
        cout << "x = " << x << endl;
        cout << "y = " << y << endl;

    } else {
        // Determinante cero: puede haber infinitas soluciones o ninguna
        double det1 = A * F - C * D;
        double det2 = B * F - C * E;

        if (det1 == 0 && det2 == 0) {
            cout << "El sistema tiene infinitas soluciones (dependientes)." << endl;
        } else {
            cout << "El sistema no tiene solución (inconsistente)." << endl;
        }
    }

    return 0;
}
