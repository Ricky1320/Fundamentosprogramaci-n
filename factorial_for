#include <iostream>
using namespace std;

int main()
{
    int n, i, factorial;
    do {
        cout << "ingresar el valor de n";
        cin >> n;
        if(n<=0) {
            cout << "el valor es negativo"<<endl;
            cout << "de nuevo";
        }
    } while (n <= 0);
    factorial = 1;
    for (int i = 1; i <= n; i++) {
        factorial = factorial * i;
    }
    cout << "El factorial de"<< n << "es"<<factorial ;
    return 0;
}
