#include <iostream>
#include <string>
using namespace std;
#define MAX 100
void CARGAR(string nombres[], int n);
void MOSTRAR(string nombres[], int n);



int main()
{
	int n;
	string nombres[MAX];
	do {
		cout << "ingrese la cantidad de nombres" << endl;
		cin >> n;
		if(n<=0){
			cout << "cantidad invalidad" << endl;
		}
	} while (n <= 0);
	CARGAR(nombres, n);
	MOSTRAR(nombres, n);
}
void CARGAR(string nombres[], int n) {
    cout << "Ingrese los nombres:" << endl;
    for (int i = 0; i < n; i++) {
        cin >> nombres[i];
    }
}
bool empiezaConVocal(string nombre) {
    if (nombre.empty()) return false;
    char c = tolower(nombre[0]);
    return (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u');
}
void MOSTRAR(string nombres[], int n) {
    string masLargo = nombres[0];
    string masCorto = nombres[0];
    int cantVocal = 0;
    for (int i = 0; i < n; i++) {
        if (nombres[i].length() > masLargo.length()) {
            masLargo = nombres[i];
        }
        if (nombres[i].length() < masCorto.length()) {
            masCorto = nombres[i];
        }
        if (empiezaConVocal(nombres[i])) {
            cantVocal++;
        }
    }
    cout << "---------------------------------" << endl;
    cout << "Nombre mas largo: " << masLargo << endl;
    cout << "Nombre mas corto: " << masCorto << endl;
    cout << "Cantidad de nombres que empiezan con vocal: " << cantVocal << endl;
}
